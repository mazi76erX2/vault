# =============================================================================
# HICO VAULT CONFIGURATION
# Local-First Architecture with Ollama + Qdrant + pgvector
# =============================================================================

# -----------------------------------------------------------------------------
# Ollama Configuration (LLM and Embeddings)
# -----------------------------------------------------------------------------
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama2

# -----------------------------------------------------------------------------
# Qdrant Configuration (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=hicovault

# -----------------------------------------------------------------------------
# PostgreSQL Configuration (with pgvector extension)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hicovault

# -----------------------------------------------------------------------------
# Supabase Local Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DEBUG=True
TESTING=False

# Secret key for JWT token generation
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Upload directory
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@hicovault.com

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:8081,http://localhost:3000,http://localhost:8082

# -----------------------------------------------------------------------------
# Retrieval Configuration
# -----------------------------------------------------------------------------
RETRIEVAL_SIMILARITY_THRESHOLD=0.5
MAX_RETRIEVAL_DOCS=5

