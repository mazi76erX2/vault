# .env.example - Copy to .env and update values

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/vault_db
DATABASE_URL_SYNC=postgresql+psycopg2://postgres:postgres@localhost:5432/vault_db

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.2:1b


# OCR Languages (add more as needed)
TESSERACT_LANG=eng

# Audio Transcription
WHISPER_MODEL=base

# Vector Configuration
VECTOR_DIMENSIONS=768

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=True
TESTING=False
LOG_LEVEL=INFO

# File Uploads
UPLOAD_DIR=./uploads

# Email/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@vault.com

# CORS
CORS_ORIGINS=http://localhost:8081,http://localhost:3000,http://localhost:8082

# RAG/Retrieval
RETRIEVAL_SIMILARITY_THRESHOLD=0.5
MAX_RETRIEVAL_DOCS=5

# Legacy Supabase (optional - for migration compatibility)
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
