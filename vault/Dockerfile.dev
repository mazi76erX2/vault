FROM python:3.14-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    PATH="/app/.venv/bin:$PATH"

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Install system dependencies for python-ldap and other packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    gcc \
    g++ \
    build-essential \
    pkg-config \
    # LDAP dependencies (CRITICAL for python-ldap)
    libldap2-dev \
    libsasl2-dev \
    libssl-dev \
    # Cairo dependencies
    libcairo2-dev \
    # Clean up
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./

# Create venv and sync dependencies with UV
RUN uv venv /app/.venv && uv sync --all-extras

# Verify critical packages are installed
RUN /app/.venv/bin/python -c "import ldap; print('✅ python-ldap installed successfully')" || \
    echo "❌ python-ldap installation failed"

# Copy application code (will be overridden by volume mounts in dev)
COPY . .

EXPOSE 7860

# Use full path to uvicorn from .venv
CMD ["/app/.venv/bin/uvicorn", "main:app", "--host", "0.0.0.0", "--port", "7860", "--reload"]
