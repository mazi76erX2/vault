# Development Dockerfile - UV-based with hot reload
FROM python:3.14-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH="/app" \
    PATH="/app/.venv/bin:$PATH"

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    gcc \
    g++ \
    build-essential \
    pkg-config \
    libcairo2-dev \
    libcairo2 \
    libldap-dev \
    libldap-common \
    libsasl2-dev \
    libsasl2-2 \
    libssl-dev \
    libssl3t64 \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./

# Create venv and sync dependencies with UV
RUN uv venv /app/.venv && \
    uv sync --all-extras

# Verify uvicorn is installed
RUN /app/.venv/bin/uvicorn --version

# Copy application code (will be overridden by volume mounts)
COPY . .

EXPOSE 7860

# Use full path to uvicorn from .venv
CMD ["/app/.venv/bin/uvicorn", "main:app", "--host", "0.0.0.0", "--port", "7860", "--reload"]
