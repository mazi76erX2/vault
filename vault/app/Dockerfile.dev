# Development Dockerfile - faster builds, hot reload
FROM python:3.14-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH="/app" \
    UV_PROJECT_ENVIRONMENT=/opt/venv \
    VIRTUAL_ENV=/opt/venv \
    PATH="/opt/venv/bin:/usr/local/bin:$PATH"

# Install UV
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Install system dependencies (including build tools for dev)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    gcc \
    g++ \
    build-essential \
    pkg-config \
    libcairo2-dev \
    libcairo2 \
    libldap-dev \
    libldap-common \
    libsasl2-dev \
    libsasl2-2 \
    libssl-dev \
    libssl3t64 \
    && rm -rf /var/lib/apt/lists/*

# Copy dependency files
COPY pyproject.toml ./
COPY uv.lock ./
COPY README.md ./

# Install dependencies - UV will use UV_PROJECT_ENVIRONMENT=/opt/venv
RUN uv sync --all-extras

# Copy application code (will be overridden by volume mount)
COPY . .

EXPOSE 7860

# Development command with auto-reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "7860", "--reload"]
